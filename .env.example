# Docker Compose Environment Variables

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
MCP_PORT=3000
DEV_PORT=3001

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=dcsandbox123

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Directory Paths
DATA_DIR=/app/data
